@{
    ViewData["Title"] = "Unidades Consumidoras";
}

@model IEnumerable<UnidadeConsumidoraModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <!--<h1>Unidades Consumidoras</h1>-->
        <a class="btn btn-success mx-2" asp-controller="UnidadeConsumidora" asp-action="Cadastrar">Cadastrar Unidade Consumidora</a>
    </div>

    <!--<table class="table table-striped table-dark">-->
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <!--<th scope="col">Descricao</th>-->
                <td>Código Unidade Consumidora</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var unidadeConsumidora in Model)
                {
                    <tr>
                        <!--<th scope="row">@unidadeConsumidora.CodigoUC</th>-->
                        <td>@unidadeConsumidora.CodigoUC</td>
                        <td>
                            <a asp-controller="UnidadeConsumidora" asp-action="Editar" asp-route-id="@unidadeConsumidora.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="UnidadeConsumidora" asp-action="Excluir" asp-route-id="@unidadeConsumidora.Id" class="btn btn-danger mx-2">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>