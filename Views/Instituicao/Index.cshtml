@{
}

@model IEnumerable<InstituicaoModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Tipo Instituições</h1>
        <a class="btn btn-success mx-2" asp-controller="Instituicao" asp-action="Cadastrar">Cadastrar Tipo de Instituição</a>
    </div>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Descricao</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach(var instituicao in Model)
            {
                <tr>
                    <th scope="row">@instituicao.Descricao</th>
                    <td>
                        <a asp-controller="Instituicao" asp-action="Editar" asp-route-id="@instituicao.Id" class="btn btn-warning mx-2">Editar</a>
                        <a asp-controller="Instituicao" asp-action="Excluir" asp-route-id="@instituicao.Id" class="btn btn-danger mx-2">Excluir</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>